<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layout/head') %>
</head>
<body>
  <header>
    <h1>BookList Home</h1>

  </header>


  <main>
    <nav>
      <ul><a href="/searches/new">Search New Books</a></ul>
    </nav>

    <!-- Results From Database  -->
    
    <ul>
      <% bookList.forEach( book => { %>
        <form action= "/home-detail/<%=book.id%>" method="GET">
            <h2><%=book.title %></h2>
            <li>Author: <%=book.author %></li>
            <img src="<%=book.image_url %>" alt="book image">
            <button> Show Detail </button>
        </form>
        <% }) %>
    </ul>


  </form>
  </main>
</body>

</html>