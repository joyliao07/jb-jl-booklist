<!DOCTYPE html>

<html>
    <head>
        <%- include('../../layout/head') %>
    </head>
    <body>
      <header>
        <h1>Book Detail</h1>

      </header>
      <main>
        <nav>
            <ul><a href="/">Home</a></ul>
        </nav>
        <div>
                <section>
                    <h2> Book Title: <%=bookSaved.title %> </h2>
                    <p> Author: <%=bookSaved.author %> </p>
                    <p> <%=bookSaved.isbn %> </p>
                    <img src="<%=bookSaved.image_url%>" alt="book image">
                    <p> Description: <%=bookSaved.description %> </p>
                    <p> Bookshelf: <%=bookSaved.bookshelf %> </p>
                    <button class="update-book"> Update Book </button>

                    <form action="/update/<%=bookSaved.id%>" method="post" class="hidden">
                        <input type="text" name="title" value="<%= bookSaved.title %>" required>
                        <input type="text" name="author" value="<%= bookSaved.author %>" required>
                        <input type="text" name="isbn" value="<%= bookSaved.isbn %>" required>
                        <input type="text" name="image_url" value="<%= bookSaved.image_url %>" required>
                        <input type="text" name="description" value="<%= bookSaved.description %>" required>
                        <input type="text" name="bookshelf" value="<%= bookSaved.bookshelf %>" required>                       
                        <button type="submit">Save to My Bookshelf</button>
                    </form>

                    <!-- DELETE BUTTON NEEDS TO BE FIXED -->
                    <form action="/book/<%=bookSaved.id%>" method="post" class="hidden">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit">Delete from My Bookshelf</button>
                    </form>

                </section>

        </div>
    </main>
        <script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
        <script src = "/js/app.js"></script>
    </body>
</html>